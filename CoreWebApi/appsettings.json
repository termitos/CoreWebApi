{
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Debug",
            "System": "Debug",
            "Microsoft": "Debug"
        }
    },
    "Serilog": {
        "MinimumLevel": "Debug",
        "Override": {
            "System": "Debug",
            "Microsoft": "Debug"
        },
        "Enrich": ["WithMachineName", "WithThreadId"],
        "WriteTo": [
            {
                "Name": "RollingFile",
                "Args": {
                    "pathFormat": "./logs/log-{Date}.txt",
                    "outputTemplate":
                        "{Timestamp:HH:mm:ss} [{Level}] Machine: {MachineName} (Thread: {ThreadId}) {Message}{NewLine}{Exception}"
                }
            }
        ]
    }
}